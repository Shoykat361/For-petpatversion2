<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".OTPFragment">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verification"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="105dp"
        android:textColor="#040D1B"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_gravity="center"
        android:text="Enter your OTP code from your"
        android:textColor="#686868"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="phone we just sent you."
        android:textColor="#686868"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/resendOtptimeET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        android:text="Resend Otp 1 .00"
        android:textColor="#6EECC7" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">
        <EditText
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:background="@drawable/resenttext"
            android:inputType="number"
            tools:text="0"
            android:textAlignment="center"
            android:textColor="#040D1B"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:background="@drawable/resenttext"
            tools:text="0"
            android:inputType="number"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textAlignment="center"
            android:textColor="#040D1B"
            android:textSize="30sp" />

        <EditText

            android:id="@+id/editTextTextPersonName4"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:background="@drawable/resenttext"
            android:inputType="number"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            tools:text="0"
            android:textAlignment="center"
            android:textColor="#040D1B"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editTextTextPersonName5"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/resenttext"
            android:inputType="number"



            tools:text="0"
            android:textAlignment="center"
            android:textColor="#040D1B"
            android:textSize="30sp" />
    </LinearLayout>



    <Button
        android:id="@+id/button5"
        android:layout_width="343dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:background="@drawable/btnall"
        android:text="continue" />
</LinearLayout>